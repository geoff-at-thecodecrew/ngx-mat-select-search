{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "timefiler-mat-select-search",
  "description": "Angular component providing an input field for searching / filtering MatSelect options of the Angular Material library.",
  "version": "3.2.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "build.ci": "npm run build -- --progress=false",
    "test": "ng test --watch=false --code-coverage",
    "test.ci": "npm run test -- --progress=false --watch=false",
    "lint": "ng lint --tsConfig=src/tsconfig.app.json",
    "e2e": "ng e2e",
    "build-lib": "ng-packagr -p package.json"
  },
  "author": "original was Esteban Gehring, Bithost GmbH",
  "bugs": {
    "url": "https://github.com/geoff-at-thecodecrew/ngx-mat-select-search/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/geoff-at-thecodecrew/ngx-mat-select-search.git"
  },
  "keywords": [
    "angular",
    "angular 2",
    "material",
    "MatSelect",
    "select",
    "search",
    "filter"
  ],
  "homepage": "https://github.com/geoff-at-thecodecrew/ngx-mat-select-search",
  "ngPackage": {
    "dest": "dist-lib",
    "lib": {
      "entryFile": "src/app/mat-select-search/public_api.ts"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "11.1.2",
    "@angular/cdk": "11.1.2",
    "@angular/common": "11.1.2",
    "@angular/compiler": "11.1.2",
    "@angular/core": "11.1.2",
    "@angular/forms": "11.1.2",
    "@angular/material": "11.1.2",
    "@angular/platform-browser": "11.1.2",
    "@angular/platform-browser-dynamic": "11.1.2",
    "@angular/router": "11.1.2",
    "ng-mat-select-infinite-scroll": "^2.1.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/architect": "~0.1101.4",
    "@angular-devkit/build-angular": "~0.1101.4",
    "@angular-devkit/schematics": "~11.1.4",
    "@angular/cli": "^11.1.4",
    "@angular/compiler-cli": "~11.1.2",
    "@angular/language-service": "~11.1.2",
    "@types/node": "^12.11.1",
    "ts-node": "~8.3.0",
    "typescript": "~4.0.2"
  }
}
